FoamFile
{
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Convert all dimensions to meters
convertToMeters 1.0;

// Define vertices (x y z)
vertices
(
    // Base rectangular channel vertices
    (0   0    -0.01)  // 0
    (5.1 0    -0.01)  // 1
    (5.1 0.1  -0.01)  // 2
    (0   0.1  -0.01)  // 3
    
    (0   0     0.01)  // 4
    (5.1 0     0.01)  // 5
    (5.1 0.1   0.01)  // 6
    (0   0.1   0.01)  // 7
);

// Define single block for channel
blocks
(
    hex (0 1 2 3 4 5 6 7) (510 10 1) simpleGrading (1 1 1)
);

// Define boundary patches
boundary
(
       
    walls
    {
        type wall;
        faces
        (
                        (0 3 7 4)
                                    (1 2 6 5)
            // Bottom wall
            (0 1 5 4)
            // Top wall
            (3 2 6 7)
        );
    }
    
    frontAndBack
    {
        type empty;
        faces
        (
            // Front face
            (0 1 2 3)
            // Back face
            (4 5 6 7)
        );
    }
);

// ************************************************************************* //